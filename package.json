{
  "name": "current-task",
  "productName": "CurrentTask",
  "version": "1.0.2",
  "description": "A desktop app that helps you to focus on one task at a time",
  "main": ".webpack/main",
  "scripts": {
    "start": "npm run generate-schema && electron-forge start",
    "start-no-generate": "electron-forge start",
    "prepare-make": "npm run check-formatting && npm run ts-check && npm run generate-schema && npm run test",
    "check-formatting": "prettier --check **/*.*",
    "ts-check": "tsc --project tsconfig.skip-declarations.json",
    "generate-schema": "mkdirp generated && ts-json-schema-generator --path src/types/AdvancedConfiguration.d.ts --type AdvancedConfiguration --out generated/advanced-config-schema.json",
    "test": "jest ./src/ --testPathIgnorePatterns=/out/",
    "make-windows": "npm run prepare-make && electron-forge make --targets=@electron-forge/maker-wix,@electron-forge/maker-zip",
    "make-mac": "npm run prepare-make && electron-forge make --targets=@electron-forge/maker-dmg"
  },
  "keywords": [],
  "author": {
    "name": "mistermicheels",
    "email": "22038058+mistermicheels@users.noreply.github.com"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepare-make"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./logo/current-task-logo"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "manufacturer": "mistermicheels",
            "name": "CurrentTask",
            "shortcutFolderName": "CurrentTask",
            "upgradeCode": "6a4cf330-c359-4af9-b7be-841e0ca2e0f6"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/about/about.html",
                  "js": "./src/renderer/about/about.js",
                  "name": "about",
                  "preload": {
                    "js": "./src/preload.js"
                  }
                },
                {
                  "html": "./src/renderer/app-window/app-window.html",
                  "js": "./src/renderer/app-window/app-window.js",
                  "name": "app_window",
                  "preload": {
                    "js": "./src/preload.js"
                  }
                },
                {
                  "html": "./src/renderer/dialog/dialog.html",
                  "js": "./src/renderer/dialog/dialog.js",
                  "name": "dialog",
                  "preload": {
                    "js": "./src/preload.js"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "ajv": "^6.12.3",
    "axios": "^0.19.2",
    "bootstrap": "^4.5.0",
    "debounce-fn": "^4.0.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.0",
    "keytar": "^6.0.1",
    "moment": "^2.27.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-dmg": "^6.0.0-beta.52",
    "@electron-forge/maker-wix": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.52",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/jest": "^26.0.10",
    "copy-webpack-plugin": "^6.0.4",
    "css-loader": "^4.2.2",
    "electron": "9.1.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "license-webpack-plugin": "^2.3.0",
    "mkdirp": "^1.0.4",
    "nan": "^2.14.1",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "svg-url-loader": "^6.0.0",
    "ts-json-schema-generator": "^0.70.2",
    "typescript": "^3.9.7"
  }
}
